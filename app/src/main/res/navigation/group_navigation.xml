    app:startDestination="@id/calendarFragment">

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.durianpancakes.familyscheduleplanner.ui.calendar.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar">
        <argument android:name="groupId"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.durianpancakes.familyscheduleplanner.ui.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.durianpancakes.familyscheduleplanner.ui.notifications.NotificationsFragment"
